<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="#000078"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="WHITE: +20 POINTS"
                android:layout_margin="8dp"
                android:onClick="addwTeamA"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="BLACK: +10 POINTS"
                android:layout_margin="8dp"
                android:onClick="addbTeamA"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="QUEEN: +50 POINTS"
                android:layout_margin="8dp"
                android:onClick="addqTeamA"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="foul: -10 points"
                android:layout_margin="8dp"
                android:onClick="foulTeamA"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team C"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/team_c_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="#000078"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="WHITE: +20 POINTS"
                android:layout_margin="8dp"
                android:onClick="addwTeamC"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="BLACK: +10 POINTS"
                android:layout_margin="8dp"
                android:onClick="addbTeamC"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="QUEEN: +50 POINTS"
                android:layout_margin="8dp"
                android:onClick="addqTeamC"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="foul: -10 points"
                android:layout_margin="8dp"
                android:onClick="foulTeamC"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#cfcfcf" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="#000078"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="WHITE: +20 POINTS"
                android:layout_margin="8dp"
                android:onClick="addwTeamB"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="BLACK: +10 POINTS"
                android:layout_margin="8dp"
                android:onClick="addbTeamB"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="QUEEN: +50 POINTS"
                android:layout_margin="8dp"
                android:onClick="addqTeamB"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="foul: -10 points"
                android:layout_margin="8dp"
                android:onClick="foulTeamB"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team D"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/team_d_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="#000078"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="WHITE: +20 POINTS"
                android:layout_margin="8dp"
                android:onClick="addwTeamD"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="BLACK: +10 POINTS"
                android:layout_margin="8dp"
                android:onClick="addbTeamD"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="QUEEN: +50 POINTS"
                android:layout_margin="8dp"
                android:onClick="addqTeamD"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="foul: -10 points"
                android:layout_margin="8dp"
                android:onClick="foulTeamD"/>


        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="reset"
        android:onClick="reset"/>

</RelativeLayout>
</ScrollView>